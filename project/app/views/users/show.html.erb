<h3>User</h3>
<p>Name: <%= @user.name if @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>

<% if @user == current_user %>
	<h3>Courses:</h3>
	<% @user.courses.each do |c| %>
        <tr>
          Name: <%= c.name %>;
        </tr>
      <% end %>

	<h4>Create study groups, events, review sessions, and more! </h4>
 	<%= button_to "Create an event", events_new_path, :class => "button medium", :method => :get %> 

	<h4>View current and past events </h4>
 	<%= button_to "View events", events_index_path, :class => "button medium", :method => :get %> 

	<h4>Courses currently taking </h4>
 	<%= button_to "Add Course", enter_path, :class => "button medium", :method => :get %> 

	
<% end %>

